.achievement 
  position relative
  display inline-block
  width 60px
  height 60px
  margin 2px 6px 6px 0
  border-radius 3px
  background no-repeat 50% 50%
  background-size cover
  cursor pointer

  &:after,
  &__text
    opacity 0
    position absolute
    bottom 100%
    left -30px
    width 120px
    margin-bottom 8px
    background #c2c2c2
    padding 3px
    color #434345
    font-size 11px
    line-height 14px
    white-space pre
    text-align center
    border-radius 3px
    box-shadow 0 0 10px
    pointer-events none
    transition opacity .2s ease

    ^[0]:hover &
      opacity 1
  
  &:before 
    opacity 0
    content '^'
    position absolute
    bottom 100%
    left 27px
    width 0
    height 0
    border solid transparent
    border-color rgba(255, 255, 255, 0)
    border-top-color #c2c2c2
    border-width 5px
    font 0/0 a
    pointer-events none
    transition opacity .2s ease

  &:hover:before
    opacity 1
