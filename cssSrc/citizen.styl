.citizen
  position relative
  height 100px
  margin-bottom 25px
  padding 15px
  background #272b36 url('data:image/jpeg;base64,') repeat-x 0 0
  background-size auto 100%
  color $color-white

  &__tab-pad
    display none

  &__userpic
    float left
    width 100px
    height @width
    margin-right 10px

  &__username
    font-size 22px
    line-height 1
    margin-bottom 0

  &__status-text
    margin-bottom 10px
    font-size 10px
    line-height 1
    color $color-gray

  &__status
    position absolute
    left 20px
    top 20px
    width 10px
    height 10px
    background $color-red
    border-radius 100%

  &__status.online
    background $color-green

  &__level
    position absolute
    right 15px
    top 15px
    font-weight bold

  &__level-count
    display inline-block
    width 35px
    height 35px
    margin-left 10px
    font-size 20px
    font-weight normal
    line-height 37px
    text-align center
    border @color-gray 2px solid
    border-radius 100%

  &__level-count.green
    border-color $color-green

  &__level-count.red
    border-color $color-red

  &__level-count.orange
    border-color $color-orange